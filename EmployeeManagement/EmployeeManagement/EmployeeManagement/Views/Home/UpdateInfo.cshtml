@{
    ViewData["Title"] = "UpdateInfo";
}
@model EmployeeViewModel
<div class="section">
    <div class="card_app">
            <div class="card__header1">
                <h3>Update Information Of Employee</h3>
            </div>
            <div class="card-body">
                <div class="box">
                    <form asp-controller="Home" asp-action="UpdateInfo" method="post">
                        <input type="hidden" class="form-control" value="@Model.Id" name ="employeeVM.Id"/>
                        <div class="form-group">
                            <lable>Name</lable>
                            <input type="text" class="form-control" value="@Model.Name" name ="employeeVM.Name"/>
                        </div>
                        <div class="form-group">
                            <lable>Birthdate</lable>
                            <input type="text" class="form-control" value="@Model.BirthDate.ToShortDateString()" name ="employeeVM.BirthDate." readonly/>
                        </div>
                        <div class="form-group">
                            <lable>Email</lable>
                            <input type="text" class="form-control" value="@Model.Email" name ="employeeVM.Email"/>
                        </div>
                        <div class="form-group">
                            <lable>Phone</lable>
                            <input type="text" class="form-control" value="@Model.Phone" name ="employeeVM.Phone" />
                        </div>
                        <div class="form-group">
                            <lable>TimeStartWorking</lable>
                            <input type="text" class="form-control" value="@Model.TimeStartWork.ToShortDateString()" name ="employeeVM.TimeStartWork" readonly/>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="buttonform">Update Infomation</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>