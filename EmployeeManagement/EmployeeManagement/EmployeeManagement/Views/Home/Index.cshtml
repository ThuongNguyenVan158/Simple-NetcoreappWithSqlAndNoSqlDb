@using EmployeeManagement.Data
@{
    ViewData["Title"] = "Home Page";
}
@model List<EmployeeViewModel>
<div class="section">
    <div class="row">
        <div class="col-md-3">
            <div class="card_app">
                <div class="card__header1">
                    <h3>Add Employee</h3>
                </div>
                <div class="card__body">
                    <form asp-controller="Home" asp-action="AddEmployee" method="post">
                        <div class="form-group">
                            <lable>Name</lable>
                            <input type="text" class="form-control" name="employeeName" />
                        </div>
                        <div class="form-group">
                            <lable>Birthdate</lable>
                            <input type="date" class="form-control" name="birthdate" />
                        </div>
                        <div class="form-group">
                            <lable>Email</lable>
                            <input type="text" class="form-control" name="email" />
                        </div>
                        <div class="form-group">
                            <lable>Phone</lable>
                            <input type="text" class="form-control" name="phone" />
                        </div>
                        <div class="form-group">
                            <lable>TimeStartWorking</lable>
                            <input type="date" class="form-control" name="timeStartWorking" />
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="buttonform">Add Employee</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card_app">
                <div class="card__header1">
                    <h3>List employee</h3>
                </div>
                <div class="card__body">
                    <div class="col-12">
                        <div class="box">
                            <div class="box-body overflow-scroll">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col" style="width: 15%;">Name</th>
                                            <th scope="col">Birthdate</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Phone</th>
                                            <th scope="col">TimeStartWorking</th>
                                            <th scope="col">Xoá/Sửa</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model.Count > 0)
                                            {
                                                foreach (var employee in Model)
                                                {
                                                    <tr>
                                                        <td>@employee.Name</td>
                                                        <td>@employee.BirthDate.ToShortDateString()</td>
                                                        <td>@employee.Email</td>
                                                        <td>@employee.Phone</td>
                                                        <td>@employee.TimeStartWork.ToShortDateString()</td>
                                                        <td>
                                                            <div style="display: flex;">
                                                                <form asp-controller="Home" asp-action="DeleteEmployee">
                                                                    <input type="hidden" name="id" value="@employee.Id" />
                                                                    <button type="submit">
                                                                        <i class="far fa-trash-alt" aria-hidden="true"
                                                                           style="font-size: 25px; margin-right: 10px; display:flex;"
                                                                           }}></i>
                                                                    </button>
                                                                </form>
                                                                <a class=" mr-3"
                                                                   href="@Url.Action("UpdateInfo","Home", new { id = employee.Id })">
                                                                    <i class="fa fa-edit"
                                                                       aria-hidden="true" style="font-size: 25px;"></i>
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr><td colspan="5" class="text-center">Danh sách trống</td></tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>